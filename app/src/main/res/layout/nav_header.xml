<?xml version="1.0" encoding="utf-8"?>


<!--Es necesario  revisar mas adelante donde va ubicado el background-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="top"
    android:padding="16dp"
    android:theme="@style/Theme.Proyecto_gestion_de_torneos"
    android:background="@drawable/background_sidebar"
    >
    <ImageView
        android:id="@+id/imagen_sidebar"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/avatar1"/>

    <TextView
        android:id="@+id/nombreusuario_sidebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nombre de usuario"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="3dp"
        android:gravity="center"/>










</LinearLayout>